    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Baloo&display=swap" rel="stylesheet">
    <!-- barlow -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow:wght@400&display=swap" rel="stylesheet">
</head>
<body>
    <div>
        <div class="frame-13">
            <span class="baocao" id="baocao">
                Báo cáo vi phạm
            </span>
        </div>
        <div class="container-thongtin">
            <label class="TenTC">@Model.Ten</label>
            <div class="frame-lienlac">
                <label class="lienlac">
                    Thông tin liên hệ:<br />
                    Email: @Model.Email<br />
                    SĐT: @Model.Sdt<br />
                    Địa chỉ: @Model.Diachi
                </label>
            </div>
            <div class="frame-mota">
                <div class="mt">Mô tả</div>
                <label class="mota">@Model.Gioithieu</label>
            </div>
            <div class="frame-thanhtuu">
                <div class="tt">Thành tựu</div>
                <label class="thanhtuu">@Model.Thanhtuu </label>
            </div>
            <div class="frame-11">
                <div class="container-8">
                    <div class="datc">
                        Đã tổ chức được:
                    </div>
                    <label class="slHD">@Model.soluonghd</label>
                    <div class="hd">
                        hoạt động.
                    </div>
                </div>
            </div>
        </div>
        <div class="frame">
            @foreach (var item in Model.Hoatdong)
            {
                <div class="hd-item">
                    <div class="hd-img">
                        <img src="https://cdn.pixabay.com/photo/2022/12/25/09/52/winter-forest-7677111_1280.jpg" class="img" alt="">

                    </div>

                    <div class="thongtinhd">
                        <h4 class="tenhd">@item.Tenhoatdong1</h4>
                        <p class="mota">@item.MuctieuHd1</p>

                        <div class="hienthi">
                            <div class="con-lv" style="bottom: 55px; height: 40px; width: 130px;">
                                <h4 class="linhvuc">@item.Linhvuc11</h4>
                            </div>
                            <a href="@($"{scheme}://{host}/Tochuc/chitietHD/{item.Idhoatdong1}")" class="hienthichitiet">Chi tiết</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>


</body>
<script>
    var spanElement = document.getElementById('baocao');

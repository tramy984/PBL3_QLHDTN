    <link rel="stylesheet" href="styleTaoHD.css">
</head>
<body>
    <form method="post">
        <div class="container">
            <div class="retangle1"></div>
            <select class="cbbtinhtrang" id="cbbtinhtrang" name="cbbtinhtrang">
                <option disabled selected hidden>Chọn tình trạng</option>
                <option value="Đã đăng ký">Đã đăng ký</option>
                <option value="Đã được duyệt">Đã được duyệt</option>
                <option value="Đã tham gia">Đã tham gia</option>
                <option value="Đã hủy">Đã hủy</option>
            </select>
            <select class="cbbgioitinh" id="cbbgioitinh" name="cbbgioitinh">
                <option disabled selected hidden>Chọn giói tính</option>
                <option value="Nam">Nam</option>
                <option value="Nữ">Nữ</option>

            </select>
            <button type="submit" class="hienthi" id="hienthi" name="action" value="hienthi">Hiển thị</button>
            <div class="dstinhnguyenvien">
                <table class="table1">
                    <thead>
                        <tr>
                            <th>ID hoạt động</th>
                            <th>Họ và tên</th>
                            <th>Thời gian đăng ký</th>
                            <th>Email</th>
                            <th>Ban tham gia</th>
                            <th>Ưu điểm</th>
                            <th>Nhược điểm</th>
                            <th>Xem thông tin TNV</th>
                        </tr>
                    </thead>
                    @if (Model != null)
                    {
                        <tbody>

                            @foreach (var items in Model)
                            {
                                <tr>
                                    @if (items != null)
                                    {
                                        <td>@items.Idhoatdong</td>
                                        <td>@items.Ten</td>
                                        <td>@items.Thoigiandangky</td>
                                        <td>@items.Email</td>
                                        <td>@items.Tenban</td>
                                        <td>@items.Uudiem</td>
                                        <td>@items.Nhuocdiem</td>
                                        <td><a href="@Url.Action("thongtinCN", "Quantrivien", new {id=items.Idcanhan})">Chi tiết</a></td>
                                    }
                                </tr>
                            }
                        </tbody>
                    }
                </table>
            </div>
            <div class="timkiemtenhoatdong">
                <input type="text" class="search-input" name="tentnv" placeholder="Nhập tên tình nguyện viên">
            </div>
            <p class="TB">
                @ViewBag.thongbao
            </p>
        </div>
    </form>
</body>

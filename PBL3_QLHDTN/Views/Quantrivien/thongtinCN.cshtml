<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <base href="https://localhost:7196/" />
    <title>Chi tiết thông tin cá nhân</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Baloo:wght@400&display=swap" />
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Inter Da 2:wght@400&display=swap" />
</head>
<body>
    <form method="post" action="/Quantrivien/thongtinCN">
        
        <div class="container">
        <label class="lb1">Chi tiết thông tin cá nhân</label>
            
        <div class="dshoatdong">
        <table class="tb" id="dshd" name="danhsachhd">
            <tr>
                <th>Tên cá nhân </th>
                    @if (Model.Ten != null)
                    {
                        <td>@Model.Ten</td>
                    }
                    else
                    {
                        <td>Trống</td>
                    }
                </tr>
            <tr>
                <th>Giới tính</th>
                    @if ( Model.Gioitinh != null)
                    {
                        if(Model.Gioitinh==true)
                        {
                                <td>Nữ</td>
                            }
                            else
                            {
                                <td>Nam</td>
                            }
                        }
                    else
                    {
                        <td>Trống</td>
                    }
            </tr>
            <tr>
                <th>Số điện thoại</th>
                    @if ( Model.Sdt != null)
                    {
                        <td>@Model.Sdt</td>
                    }
                    else
                    {
                        <td>Trống</td>
                    }
            </tr>
            <tr>
                <th>Email</th>
                    @if ( Model.Email!= null )
                    {
                        <td>@Model.Email</td>
                    }
                    else
                    {
                        <td>Trống</td>
                    }
            </tr>
            <tr>
                <th>Ngày sinh </th>
                    @if ( Model.Namsinh != null)
                    {
                        <td>@Model.Namsinh</td>
                    }
                    else
                    {
                        <td>Trống</td>
                    }
            </tr>
            <tr>
                <th>Địa chỉ </th>
                    @if ( Model.Diachi != null)
                    {
                        <td>@Model.Diachi</td>
                    }
                    else
                    {
                        <td>Không có chỉnh sửa</td>
                    }
           </tr>
                    <tr>
                        <th>Trạng thái tài khoản </th>
                        @if (Model.Trangthai != null)
                        {
                            if(Model.Trangthai == true)
                            {
                                <td>Đang hoạt động</td>
                            }
                            else
                            {
                                <td>Đã bị khoá</td>
                            }
                        }
                    </tr>
                </table>
                
        </div>
           

        </div>
        <a href="@Url.Action("DSHDCanhan", "Quantrivien", new { idcn = Model.Idcanhan })" class="xem">Xem các hoạt động</a>
        @if(Model.Trangthai==true)
        {
            <a href="@Url.Action("Khoataikhoan", "Quantrivien", new { id = Model.Idcanhan })" class="khoa">Khoá tài khoản</a>
        }
        else
        {
            <a href="@Url.Action("Motaikhoan", "Quantrivien", new { id = Model.Idcanhan })" class="mo">Gỡ khoá tài khoản</a>
        }

    </form>
</body>

﻿@{
    Layout = "~/Views/Shared/_layoutQTV.cshtml";
}
@model IEnumerable<PBL3_QLHDTN.ViewModel.BaocaoViewModel>
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <base href="https://localhost:7196/" />
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Xem báo cáo</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

    <!-- Dẫn đường link đến các font chữ sử dụng trong trang -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Baloo&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow:wght@400&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inder:wght@400&display=swap" rel="stylesheet">
</head>
<body>
    <form method="post" action="/Quantrivien/Xembaocao">
        <div class="container">
            <div class="retangle1">


                <input type="number" class="tktencanhan" name="idbibaocao" placeholder="Nhập ID bị báo cáo">

                <button type="submit" class="hienthi" id="hienthi" name="hienthi">Hiển thị</button>
            </div>
            <div class="dsbaocao">
                <table class="table1">
                    <thead>
                        <tr>
                            <th>ID tài khoản báo cáo</th>
                            <th>ID tài khoản bị báo cáo</th>
                            <th>Thời gian báo cáo</th>
                            <th>Nội dung</th>
                        </tr>
                    </thead>
                    @if (Model != null)
                    {
                        <tbody>

                            @foreach (var items in Model)
                            {
                                <tr>
                                    <td>
                                        @if (items.VTtaikhoanbc == 1)
                                        {
                                            <a href="@Url.Action("thongtinCN", "Quantrivien", new { id = items.Idtkbaocao })">@items.Idtkbaocao</a>
                                        }
                                        else if (items.VTtaikhoanbc == 2)
                                        {
                                            <a href="@Url.Action("chitietTochuc", "Quantrivien", new { id = items.Idtkbaocao })">@items.Idtkbaocao</a>
                                        }

                                    </td>
                                    <td>

                                        @if (items.VTtaikhoanbibc == 1)
                                        {
                                            <a href="@Url.Action("thongtinCN", "Quantrivien", new { id = items.Idtkbibaocao })">@items.Idtkbibaocao</a>
                                        }
                                        else if (items.VTtaikhoanbibc == 2)
                                        {
                                            <a href="@Url.Action("chitietTochuc", "Quantrivien", new { id = items.Idtkbibaocao })">@items.Idtkbibaocao</a>
                                        }
                                    </td>
                                    <td>@items.Tgbaocao</td>
                                    <td>@items.Ndbaocao</td>
                                </tr>
                            }
                        </tbody>
                    }
                </table>
            </div>

        </div>
    </form>
    <p class="TB">
        @ViewBag.thongbao
    </p>

</body>

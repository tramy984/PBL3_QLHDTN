@{
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
@model List<PBL3_QLHDTN.ViewModel.thongtinHoatdong>
@{
    var scheme = Context.Request.Scheme;
    var host = Context.Request.Host;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <title>Trang chủ</title>
    <base href="https://localhost:7196/">
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Baloo:wght@400&display=swap" />
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Inter Da 2:wght@400&display=swap" />
</head>
<body>
    <form method="post">
    <div class="container ">
        <div class="retangle1"></div>
        <div class="KTTNV">Kết nối tình nguyện viên</div>
    </div>
    <div class="frame">
        <div style="width: 1200px;height:50px;font-size:20px; position:absolute; left:100px;top:-50px;">
                <select class="cbblinhvuc" id="cbblinhvuc" name="cbblinhvuc" style="margin-right:30px;font-size:20px;">
            <option disabled selected hidden>Chọn lĩnh vực</option>
            @foreach (var lv in ViewBag.linhvuc)
            {
                <option value="@lv.Idlinhvuc">@lv.Linhvuc1</option>
            }
        </select>
                <select class="QuanHuyen" id="QuanHuyen" name="QuanHuyen" onchange="showPX()" style="margin-right:30px;font-size:20px;">
            <option disabled selected hidden>Chọn Quận/Huyện</option>
            <option value="Cẩm Lệ">Cẩm Lệ</option>
            <option value="Hải Châu">Hải Châu</option>
            <option value="Liên Chiểu">Liên Chiểu</option>
            <option value="Ngũ Hành Sơn">Ngũ Hành Sơn</option>
            <option value="Sơn Trà">Sơn Trà</option>
            <option value="Thanh Khê">Thanh Khê</option>
            <option value="Hoà Vang">Hoà Vang</option>
            <option value="Hoàng Sa">Hoàng Sa</option>
        </select>
                <input type="text" class="search-input" name="tenhd" id="tenhd" placeholder="Nhập thông tin tìm kiếm" style="margin-right:30px;font-size:20px;">
                <button class="search-button" style="font-size:20px;width:50px;">
            Hiển thị
        </button>
            </div>
            @if(Model!=null){
            @foreach (var item in Model)
            {
                <div class="hd-item">
                    <div class="hd-img">
                        <img src="https://cdn.pixabay.com/photo/2022/12/25/09/52/winter-forest-7677111_1280.jpg" class="img" alt="">

                    </div>

                    <div class="thongtinhd">
                        <h4 class="tenhd">@item.Tenhoatdong1</h4>
                        <p class="mota">@item.MuctieuHd1</p>

                        <div class="hienthi">
                            <div class="con-lv" style="bottom: 55px; height: 40px; width: 130px;">
                                <h4 class="linhvuc">@item.Linhvuc11</h4>
                            </div>
                            <a href="@($"{scheme}://{host}/Home/chitiet/{item.Idhoatdong1}")" class="hienthichitiet">Chi tiết</a>
                        </div>
                    </div>
                </div>
            }
            }
    </div>
    </form>
    <p class="TB">
        @ViewBag.thongbao
    </p>

</body>
</html>
<style>

    .hd-item {
        display: inblock;
        box-sizing: border-box;
        margin-bottom: 20px;
        border: 1px solid #ddd;
        border-radius: 20px;
        overflow: hidden;
        height: 455px;
        width: 336px;
    }

    .hd-img {
        position: relative;
        display: inline-block;
        width: 336px;
        height: 270px;
    }

        .hd-img img {
            width: 100%;
            height: 269px;
            display: block;
        }

    .thongtinhd {
        text-align: center;
        padding: 15px;
        display: block;
        height: 230px;
        width: 336px;
    }

    .tenhd {
        font-size: 18px;
        margin-top: 0;
        margin-bottom: 10px;
    }

    .mota {
        font-size: 14px;
        margin-top: 0;
        margin-bottom: 3px;
        width: 336px;
        height: 90px;
        text-align: center;
    }

    .hienthi {
        position: relative;
        display: block;
        justify-content: center;
        width: 490px;
        height: 80px;
    }

    .con-lv {
        border-radius: 20px;
        border: 3px solid #0F481F;
        background: #FFFFFF;
        position: absolute;
        width: 129px;
        box-sizing: border-box;
        display: flex;
        justify-content: center; /* Căn giữa ngang */
        align-items: center; /* Căn giữa dọc */
    }

    .linhvuc {
        color: black; /* Màu chữ để đảm bảo nhìn thấy rõ */
        font-size: 16px; /* Kích thước chữ ví dụ */
        /* Bổ sung thêm các thuộc tính khác nếu cần */
    }

    .hienthichitiet {
        text-decoration: none;
        font-size: 16px;
        font-family: 'Barlow', sans-serif;
        width: 100px;
        border-radius: 15px;
        position: relative;
        height: 40px;
        box-sizing: border-box;
        color: #000; /* Đặt màu chữ */
        display: inline-block; /* Đảm bảo thẻ a được hiển thị như một khối */
        text-align: center; /* Căn giữa nội dung */
        align-content: center;
        background-color: #f0f0f0; /* Đặt màu nền mặc định nếu cần */
        bottom: 17px;
        right: 5px;
    }

        .hienthichitiet:hover {
            background: #0F8730;
        }

    .frame {
        top: 600px;
        position: relative;
        margin: 0 136px 69px 136px;
        display: flex;
        flex-wrap: wrap;
        gap: 50px;
        justify-content: center;
        align-self: flex-start;
        margin-left: auto;
        margin-right: auto;
        max-width: 1200px;
        box-sizing: border-box;
        border: 1px black;
    }

    .container {
        max-width: 1440px;
        height: 500px;
        margin-left: auto;
        margin-right: auto;
        position: relative; /* Cần thiết để sử dụng position absolute cho các phần tử con */
    }

    .retangle1 {
        position: absolute;
        left: 0px;
        top: 0px;
        width: 1440px;
        height: 680px;
        background: linear-gradient(180deg, rgba(77, 227, 119, 0.36), #fff);
    }

    .KTTNV {
        position: absolute;
        left: 248px;
        top: 331px;
        width: 945px;
        height: 129px;
        font-size: 90px;
        font-family: Baloo;
    }
</style>
